<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.haimer.proyectoconcienciaemocionalfup.Registroprofesor">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Registro De Usuario "
                android:textSize="35dp" />

            <EditText
                android:id="@+id/documentoprofesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_marginBottom="10dp"

                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:hint="Documento"
                android:padding="10dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp" />

            <EditText
                android:id="@+id/nombreprofesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Nombre"
                android:padding="10dp"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/apellidoprofesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Apellido"
                android:padding="10dp"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/correoprofesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="correo"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/telefonoprofesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Telefono"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/passwordprofesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Contraseña"
                android:textSize="25dp"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/passwordprofesor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Repetir Contraseña"
                android:textSize="25dp"
                android:inputType="textPassword"/>


            <Button
                android:id="@+id/btnregistrarprofesor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="registrar"
                android:textSize="25dp"/>






        </LinearLayout>



    </ScrollView>








</LinearLayout>
